@model MvcApplication1.Models.BoardCreate

@{
    ViewBag.Title = "Create New Board";
}

@section Javascript{
    <script src ="@Url.Content("~/Scripts/BoardIsInUse.js")" type="text/javascript"> </script>
}

<h2>Create New Board</h2>

@using(Html.BeginForm("Create","Board",FormMethod.Post,new { id = "NewBoardForm", @class = "Form-inline"}))
{
    <p id="BoardNameID">
        @Html.LabelFor(m => m.Name)
        @Html.EditorFor(m => m.Name)@Html.ValidationMessageFor(m => m.Name)
    </p>

    <p>
        @Html.LabelFor(m => m.Description)
        @Html.EditorFor(m => m.Description)
    </p>
    
    <p>
        @Html.LabelFor(m => m.IsPublic)
        @Html.EditorFor(m => m.IsPublic)
    </p>
    
    <input type="submit" value="Create"/>
}

